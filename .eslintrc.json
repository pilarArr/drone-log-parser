{
  "extends": "airbnb-base",
  "env": {
    "node": true
  },
  "globals": {
    "expect": false
  },
  "rules": {
    "indent": ["error", 2],
    "no-tabs": ["error"],
    "no-mixed-spaces-and-tabs": ["error"],
    "import/no-unresolved": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "no-underscore-dangle": ["error"],
    "class-methods-use-this": 0
  }
}
